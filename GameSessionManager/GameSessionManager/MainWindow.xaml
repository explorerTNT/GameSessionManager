<Window x:Class="GameSessionManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameSessionManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        
        <TabControl Style="{DynamicResource TabControllStyle}">

            <TabItem Style="{DynamicResource TabItemStyle}" Header="Lobby">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="167*"/>
                        <RowDefinition Height="27*"/>
                        <RowDefinition Height="212*"/>
                    </Grid.RowDefinitions>

                    <StackPanel x:Name="LobbyList" Margin="5,5,5,5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Player 1" />
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Player 2" />
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Player 3" />
                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Player 4" />
                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Player 5" />
                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Player 6" />
                        </Grid>


                    </StackPanel>


                    <StackPanel x:Name="NotificationSendBlock" Height="22" VerticalAlignment="Center" Grid.Row="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="11*"/>
                            </Grid.ColumnDefinitions>
                            <!-- Кнопка для отправки уведомления Click="SendNotificationButton_Click"-->
                            <Button Style="{DynamicResource ButtonStyle}" Grid.Column="0" x:Name="SendNotificationButton" Content="Send" />
                            <!-- Поле для отправки уведомления-->
                            <TextBox Grid.Column="1" Text="Send Notification"/>
                        </Grid>
                    </StackPanel>
                    <TextBox Grid.Row="2" Text="Grim> Пися попа"/>


                </Grid>
            </TabItem>

            <TabItem Style="{DynamicResource TabItemStyle}" Header="Friends">
                <!--to do: сделать список друзей-->
            </TabItem>

            <TabItem Style="{DynamicResource TabItemStyle}" Header="Chellenge">
                <!--to do: сделать вкладку chellenge-->
            </TabItem>

            <TabItem Style="{DynamicResource TabItemStyle}" Header="Options">
                <!--to do: сделать вкладку настроек-->
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Тема"/>
                        <ComboBox x:Name="ThemeBox" Grid.Row="0" Grid.Column="1"/>
                    </Grid>
                </StackPanel>

            </TabItem>

            <TabItem Style="{DynamicResource TabItemStyle}" Header="Debug">
                <StackPanel>
                    <Button x:Name="StartVotingButton" Content="Начать голосование" Click="StartVotingButton_Click"/>
                    <Button x:Name="StartChallengeButton" Content="Начать челендж" Click="StartChallengeButton_Click"/>
                    <TextBox x:Name="ChallengeNameTextBox" Text="Challenge Text"/>
                </StackPanel>
                                
            </TabItem>

        </TabControl>

        <!-- Кнопка для отправки уведомления !!!!УЖЕ ДОБАВЛЕНА <Button x:Name="SendNotificationButton" Content="Отправить уведомление" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Height="50" Margin="10" Click="SendNotificationButton_Click"/>-->


        <!-- Кнопка для вызова голосования <Button x:Name="StartVotingButton" Content="Начать голосование" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Height="50" Margin="10,70,10,10" Click="StartVotingButton_Click"/> -->


        <!-- Кнопка для вызова задания <Button x:Name="StartChallengeButton" Content="Начать челендж" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" Height="50" Margin="10,130,10,10" Click="StartChallengeButton_Click"/> -->


        <!-- Текстовое поле для ввода названия челенджа  <TextBox x:Name="ChallengeNameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,190,0,0" /> -->

    
    </Grid>
</Window>
